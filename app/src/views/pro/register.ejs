<!DOCTYPE html>
<html>
<head>
    <title>Pro Registration</title>
</head>
<body>
    <form action="/register" method="post">
        <label for="email">E-mail:</label>
        <input type="email" name="email" required><br><br>

        <label for="password">Password:</label>
        <input type="password" name="password" required><br><br>

        <label for="birth_date">Birth Date (YYYY-MM-DD):</label>
        <input type="date" name="birth_date" required><br><br>

        <label for="gender">Gender:</label>
        <select name="gender" required>
            <option value="male">Male</option>
            <option value="female">Female</option>
            <option value="other">Other</option>
        </select><br><br>

        <label for="address">Address:</label>
        <input type="text" name="address" required><br><br>

        <label for="height">Height (cm):</label>
        <input type="number" name="height" required><br><br>

        <label for="weight">Weight (kg):</label>
        <input type="number" name="weight" required><br><br>

        <label for="phone">Phone:</label>
        <input type="text" name="phone" required><br><br>

        <label for="golf_course_id">Golf Course ID:</label>
        <input type="text" name="golf_course_id"><br><br>

        <input type="submit" value="Register as Pro">
    </form>

    <% if (typeof message !== 'undefined') { %>
        <p><%= message %></p>
    <% } %>
</body>
</html>
